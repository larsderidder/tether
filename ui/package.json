{
  "name": "tether-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "tailwind:build": "tailwindcss -c tailwind.config.js -i src/index.css -o src/generated.css",
    "tailwind:watch": "tailwindcss -c tailwind.config.js -i src/index.css -o src/generated.css --watch",
    "dev": "npm run tailwind:build && vite",
    "build": "npm run tailwind:build && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "body-scroll-lock": "^4.0.0-beta.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff2html": "^3.4.55",
    "lucide-vue-next": "^0.562.0",
    "marked": "^17.0.1",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.1.6",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.6.0"
  }
