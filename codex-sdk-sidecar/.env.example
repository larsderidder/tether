# Codex SDK Sidecar Configuration
# Copy to .env and fill in your values

# =============================================================================
# Server Settings
# =============================================================================

# Host to bind the HTTP server to (default: 127.0.0.1)
# TETHER_CODEX_SIDECAR_HOST=127.0.0.1

# Port to bind the HTTP server to (default: 8788)
# TETHER_CODEX_SIDECAR_PORT=8788

# Authentication token for the sidecar API
# The agent must send this token in the X-Sidecar-Token header
# TETHER_CODEX_SIDECAR_TOKEN=your-secure-token

# =============================================================================
# Logging Settings
# =============================================================================

# Log level: trace, debug, info, warn, error, fatal (default: info)
# TETHER_CODEX_SIDECAR_LOG_LEVEL=info

# Enable pretty-printed logs for development (default: false)
# TETHER_CODEX_SIDECAR_LOG_PRETTY=1

# =============================================================================
# Session Settings
# =============================================================================

# Maximum seconds for a turn before timeout, 0 disables (default: 0)
# TETHER_CODEX_SIDECAR_TURN_TIMEOUT_SECONDS=0

# =============================================================================
# Codex SDK Settings
# =============================================================================

# Path to the Codex CLI binary (optional, uses default if not set)
# TETHER_CODEX_SIDECAR_CODEX_BIN=/path/to/codex

# Model to use for Codex threads (optional)
# TETHER_CODEX_SIDECAR_MODEL=gpt-4

# Sandbox mode for Codex execution (optional)
# Options: workspace-write, workspace-read-only, none
# TETHER_CODEX_SIDECAR_SANDBOX_MODE=workspace-write

# Approval policy for Codex actions (optional)
# Options: auto-approve, on-request
# TETHER_CODEX_SIDECAR_APPROVAL_POLICY=auto-approve

# =============================================================================
# Required: OpenAI API Key (for Codex)
# =============================================================================

# Your OpenAI API key
OPENAI_API_KEY=sk-...
