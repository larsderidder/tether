# =============================================================================
# Tether Agent Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------

# Host and port for the Tether agent server
TETHER_AGENT_HOST=0.0.0.0
TETHER_AGENT_PORT=8787

# Authentication token (required in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TETHER_AGENT_TOKEN=

# Development mode (bypasses auth, enables debug features)
# Set to 1 for local development only
TETHER_AGENT_DEV_MODE=0

# Data storage directory
TETHER_AGENT_DATA_DIR=./data

# -----------------------------------------------------------------------------
# AI Adapter Settings
# -----------------------------------------------------------------------------

# Which AI adapter to use
# Options: claude_local, claude_api, claude_auto, codex_sdk_sidecar, codex_cli
TETHER_AGENT_ADAPTER=claude_local

# Anthropic API key (only needed for claude_api or claude_auto adapters)
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Telegram Bridge (Optional)
# -----------------------------------------------------------------------------

# Telegram bot token from @BotFather
# Get one at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Telegram group/forum ID
# For group chats: Get from bot logs when you add it to a group
# For forum groups: Use the forum group chat ID
TELEGRAM_FORUM_GROUP_ID=

# -----------------------------------------------------------------------------
# Slack Bridge (Optional)
# -----------------------------------------------------------------------------

# Slack bot token (starts with xoxb-)
# Get from: https://api.slack.com/apps
SLACK_BOT_TOKEN=

# Slack channel ID (starts with C)
# Find in Slack: Right-click channel → View channel details → Copy ID
SLACK_CHANNEL_ID=

# -----------------------------------------------------------------------------
# Discord Bridge (Optional)
# -----------------------------------------------------------------------------

# Discord bot token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# Discord channel ID (numeric)
# Optional: you can leave this empty and instead run `!setup <code>` in the desired channel.
# Enable Developer Mode in Discord → Right-click channel → Copy ID
DISCORD_CHANNEL_ID=

# Require pairing to use the bot (recommended if the channel has multiple users)
DISCORD_REQUIRE_PAIRING=0

# Optional fixed pairing code; if empty and pairing is required, a code is generated and logged
DISCORD_PAIRING_CODE=

# Optional allowlist of Discord user IDs (comma-separated)
DISCORD_ALLOWED_USER_IDS=

# -----------------------------------------------------------------------------
# Bridge Spam Control
# -----------------------------------------------------------------------------

# Debounce repeated bridge "error" status notifications (seconds)
TETHER_AGENT_BRIDGE_ERROR_DEBOUNCE_SECONDS=30

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------

# SQLite database path (relative to TETHER_AGENT_DATA_DIR)
# Default: data/tether.db
# DATABASE_URL=sqlite:///./data/tether.db

# -----------------------------------------------------------------------------
# MCP Server Settings
# -----------------------------------------------------------------------------

# Tether API URL for MCP server to connect to
# Usually http://localhost:8787 when running locally
TETHER_API_URL=http://localhost:8787

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or console
LOG_FORMAT=console
