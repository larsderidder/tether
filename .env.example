# Tether Docker Configuration
# Copy to .env and fill in your values

# =============================================================================
# Agent Configuration
# =============================================================================

# Auth token for agent API (leave empty to disable auth - NOT recommended)
AGENT_TOKEN=your-secure-token-here

# Runner adapter: "claude" (default) or "codex_sdk_sidecar"
AGENT_ADAPTER=claude

# =============================================================================
# Claude Adapter (when AGENT_ADAPTER=claude)
# =============================================================================

# Required for Claude adapter
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Codex SDK Sidecar Adapter (when AGENT_ADAPTER=codex_sdk_sidecar)
# Uncomment the sidecar service in docker-compose.yml to use this
# =============================================================================

# OPENAI_API_KEY=sk-...
# CODEX_MODEL=gpt-4
# SIDECAR_TOKEN=your-sidecar-token

# =============================================================================
# Telegram Bridge
# =============================================================================

# Required: Bot token from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Required: Your chat ID (use @userinfobot to find it)
TELEGRAM_CHAT_ID=123456789
